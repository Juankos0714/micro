  <modelVersion>4.0.0</modelVersion>
  
  <groupId>io.biztech</groupId>
  <artifactId>reactive-commerce-platform</artifactId>
  <version>2.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <name>Reactive Commerce Platform</name>
  <description>Sistema de comercio electr√≥nico reactivo con arquitectura de microservicios</description>
  
  <modules>
